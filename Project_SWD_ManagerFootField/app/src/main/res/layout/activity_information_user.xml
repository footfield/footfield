<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationUserActivity">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <Button
        android:id="@+id/btnChooseFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:text="Choose file" />

    <EditText
        android:id="@+id/edtNameUpdate"
        android:layout_width="384dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="255dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/boder"
        android:drawableLeft="@drawable/name"
        android:hint=" Name"
        android:paddingLeft="5dp" />


    <EditText
        android:id="@+id/edtPhoneUpdate"
        android:layout_width="384dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="316dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/boder"
        android:drawableLeft="@drawable/phone"
        android:hint="  Phone"
        android:paddingLeft="5dp" />

    <EditText
        android:id="@+id/edtAddressUpdate"
        android:layout_width="384dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="382dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/boder"
        android:drawableLeft="@drawable/email"
        android:hint="  Address"
        android:paddingLeft="5dp" />

    <EditText
        android:id="@+id/edtPassUpdate"
        android:layout_width="384dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="444dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:background="@drawable/boder"
        android:drawableLeft="@drawable/password"
        android:hint="  Password"
        android:paddingLeft="5dp" />

    <Button
        android:id="@+id/btnSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="499dp"
        android:layout_marginBottom="305dp"
        android:background="@drawable/corners"
        android:text="Setting"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnUpdate"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="550dp"
        android:layout_marginBottom="305dp"
        android:background="@drawable/corners"
        android:text="Update"
        android:textColor="#FFFFFF" />

</RelativeLayout>